{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 460, "height": 310,
  "data": {"url": "full_grouped.csv"},
  "mark": "area",
  "transform": [{"filter": {"field": "Country/Region", "oneOf": ["Peru", "Russia", "India", "Brazil", "US"]}}],
  "encoding": {
    "x": {
      "timeUnit": "yearmonthdate", "field": "Date", "title": "Date",
      "axis": {"format": "%b %d", "grid": false}
    },
    "y": {
      "aggregate": "sum", "field": "Confirmed", "axis": {"grid": false}, "title": "Confirmed Cases"
    },
    "color": {
      "field": "Country/Region", "title": "Country"
    }
    ,
    "tooltip": [
      {"timeUnit": "yearmonthdate", "field": "Date", "title": "Date"},
      {"field": "Country/Region", "type": "nominal", "title": "Country"},
      {"field": "Confirmed", "type": "quantitative"},
      {"field": "Deaths", "type": "quantitative"},
      {"field": "Recovered", "type": "quantitative"},
      {"field": "Active", "type": "quantitative"}
    ]
  }
}